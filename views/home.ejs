<link rel="icon" href="https://miro.medium.com/max/400/1*tfZa4vsI6UusJYt_fzvGnQ.png">

<div class="container p-5 text-center">
    <h1 class="display-5">Node Blog</h1>
</div>

<hr>

<%- include('partials/header') -%>

<div class="container py-4 px-0">
    <div class="row align-items-start">
        <div class="col">
            <% posts.reverse().forEach((post) => { %>
                <h3><%= post.title %></h3>
                <h6 class="opacity-50">Posted on <%= post.date %> by <span id="author">Himanshu</span></h6>
                <p id="content"><%= post.content.substring(0, 200) + " " %><a href="/posts/<%= post._id %>">read more</a></p>
                <hr>
            <% }); %>
        </div>
        <div class="col">
            <div class="container p-3 other-post">
                <h3 class="text-center display-5">Popular post</h3>
                <hr>
                <a href="/<%= posts._id %>" id="other-post-links">
                <% for(var i = 0; i < posts.reverse().length/2; i++) { %>
                    <h5 class="text-center"><%= posts[i].title %></h3>
                    <h6 class="opacity-50 text-center">Posted on <%= posts[i].date %> by <span id="author">Himanshu</span></h6>
                    <p><%= posts[i].content.substring(0, 140) + "..." %></p>
                    <hr>
                <% } %>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>